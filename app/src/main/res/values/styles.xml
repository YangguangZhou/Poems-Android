<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.ExtendedFloatingActionButton.Favorite" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="backgroundTint">@color/selector_fab_favorite_background</item>
        <item name="iconTint">@color/selector_fab_favorite_icon_text</item>
        <item name="android:textColor">@color/selector_fab_favorite_icon_text</item>
    </style>

    <style name="ThemeOverlay_M3_BottomSheet" parent="@style/ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet</item>
    </style>

    <style name="Widget.App.BottomSheet" parent="@style/Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
    </style>

    <style name="ShapeAppearance.App.ChatBubble.User" parent="@style/ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="ShapeAppearance.App.ChatBubble.Assistant" parent="@style/ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
    </style>
</resources>
