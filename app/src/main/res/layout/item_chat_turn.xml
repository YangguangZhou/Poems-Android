<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingTop="6dp"
    android:paddingBottom="2dp">

    <!-- User bubble (right aligned) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingHorizontal="8dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorPrimary"
            app:strokeWidth="0dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.ChatBubble.User">

            <TextView
                android:id="@+id/text_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:textColor="?attr/colorOnPrimary"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Assistant bubble (left aligned) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="8dp"
        android:gravity="start">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_assistant_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            app:strokeWidth="0dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.ChatBubble.Assistant">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_assistant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="300dp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:textColor="?attr/colorOnSurface"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                <TextView
                    android:id="@+id/text_typing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:visibility="gone"
                    android:text="···" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Delete button for the whole turn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="0dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_delete_turn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:contentDescription="@string/delete_message"
            app:icon="@drawable/ic_delete"
            app:iconTint="?attr/colorOnSurfaceVariant"
            app:backgroundTint="@android:color/transparent" />
    </LinearLayout>

</LinearLayout>
